ACLOCAL_AMFLAGS = -I m4 -I${OSSIEHOME}/share/aclocal/ossie -I /usr/local/share/aclocal
AUTOMAKE_OPTIONS = subdir-objects

#{% block binInfo %}
ossieName = {{component.name}}
libdir = $(prefix)/{{component.sdrpath}}/{{componentdir}}/{{outputdir}}/
lib_LTLIBRARIES = {{component.name}}.la
#{% endblock %}

#{% block xmlInfo %}
xmldir = $(prefix)/{{component.sdrpath}}/{{componentdir}}/
dist_xml_DATA = {{component.profile.values()|relpath(outputdir)|join(' ')}}
#{% endblock %}

.PHONY: convenience-link clean-convenience-link

all-local : convenience-link
clean-local : clean-convenience-link

convenience-link : {{component.name}}.la
	@ln -fs .libs/{{component.name}}.so

clean-convenience-link:
	@rm -f {{component.name}}.so

#{% block distClean %}
distclean-local:
	rm -rf m4
	rm -f config.*
	rm -rf autom4te.cache
	rm -f acinclude.m4
	rm -f aclocal.m4
	rm -f configure
	rm -f depcomp
	rm -f install-sh
	rm -f ltmain.sh
	rm -f Makefile.in
	rm -f missing
	rm -rf .deps
#{% endblock %}

#{% block extensions %}
